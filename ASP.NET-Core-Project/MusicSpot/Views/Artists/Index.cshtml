@model IEnumerable<MusicSpot.Data.Models.Artist>

@{
    ViewData["Title"] = "Index";
}

<h1>User Artists Catalog</h1>

<p>
    <a asp-action="Create">Add Artist</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Albums)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @*@if (User.Identity.IsAuthenticated)
        {
            
        }*@
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    <a class="nav-link text-strong" asp-area="" asp-controller="Albums" asp-action="AllAlbums" asp-route-id="@item.Id">All Albums</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
